<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:src="@drawable/med" />

    <ImageView
        android:id="@+id/ico"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:opacity="translucent"
        android:src="@drawable/icon_pharma"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!--<ImageView
        android:id="@+id/ico_job"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:opacity="translucent"
        android:src="@drawable/pharma_l"
        android:visibility="gone" />-->

    <TextView
        android:id="@+id/txtw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
       android:layout_below="@+id/ico"
        android:clickable="true"
        android:text="Pharma Jobs"
        android:textColor="@color/red"
        android:textSize="30sp"


        android:textStyle="bold|italic"
        android:visibility="visible" />


    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtw"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:text="Click to Proceed"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:shadowDx="-4"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="Total No of Vacancies"
        android:textColor="#008000"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />


    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

</RelativeLayout>