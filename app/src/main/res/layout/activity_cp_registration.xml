<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/textColorPrimary">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar" />

                <ImageView
                    android:id="@+id/image_banner"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/load"></ImageView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:id="@+id/linearfe"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="" />

                        <RadioGroup
                            android:id="@+id/radioSex1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/spnr"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/fresher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fresher" />

                            <RadioButton
                                android:id="@+id/exp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Experience" />

                        </RadioGroup>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/input_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Name"
                            android:singleLine="true"
                            android:textSize="20dp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/input_layout_name"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/astrike" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/input_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:textSize="20dp" />


                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/input_layout_email"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/astrike" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/input_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textSize="20dp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/input_layout_password"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/astrike" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_cpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/input_cassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Conform Password"
                            android:inputType="textPassword"
                            android:textSize="20dp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/input_layout_cpassword"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/astrike" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_mob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/input_mob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Mobile Number"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:textSize="20dp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/input_layout_mob"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/astrike" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:id="@+id/linear_mf"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <RadioGroup
                            android:id="@+id/radioSex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/spnr"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male" />

                            <RadioButton
                                android:id="@+id/female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Female" />
                        </RadioGroup>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_qual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">


                        <AutoCompleteTextView
                            android:id="@+id/input_qual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Qualification" />


                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/input_layout_qual"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/astrike" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">


                        <EditText
                            android:id="@+id/input_addr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Address"
                            android:inputType="textEmailAddress"
                            android:textSize="20dp" />


                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/input_layout_addr"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/astrike" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/input_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Pincode"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:textSize="20dp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/input_layout_pincode"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/astrike" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_jloc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/input_jloc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Job Location"
                            android:inputType="textEmailAddress"
                            android:textSize="20dp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/input_layout_jloc"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/astrike" />
                </RelativeLayout>

                <!-- <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginTop="10dp"
                    >
                     <Spinner
                         android:id="@+id/skill"
                         android:entries="@array/spinner_item_skills"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content" />

                 </LinearLayout>-->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_precompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <AutoCompleteTextView
                            android:id="@+id/input_precompany"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Company"
                            android:textSize="20dp" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/input_layout_precompany"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/astrike" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_currentpos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/input_currentpos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Current Position"
                            android:inputType="textEmailAddress"
                            android:textSize="20dp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/i2"
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/input_layout_currentpos"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/astrike" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_sp"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <Spinner
                            android:id="@+id/input_specl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:entries="@array/spinner_item_spcl"
                            android:textSize="20dp" />

                        <ImageView
                            android:id="@+id/i3"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_alignRight="@+id/input_specl"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="2"
                            android:src="@drawable/astrike" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_exp"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <Spinner
                            android:id="@+id/expr"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:entries="@array/spinner_item_expyrs"
                            android:textSize="20dp" />

                        <ImageView
                            android:id="@+id/i4"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_alignRight="@+id/expr"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="2"
                            android:src="@drawable/astrike" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_sal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <Spinner
                            android:id="@+id/sal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:entries="@array/spinner_item_salary"
                            android:textSize="20dp" />

                        <ImageView
                            android:id="@+id/i5"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_alignRight="@+id/sal"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="2"
                            android:src="@drawable/astrike" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:src="@mipmap/ic_launcher_reg" />
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
